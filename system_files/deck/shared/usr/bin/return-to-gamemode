#!/usr/bin/bash

IMAGE_INFO="/usr/share/ublue-os/image-info.json"
BASE_IMAGE_NAME=$(jq -r '."base-image-name"' < $IMAGE_INFO)

USER=$(id -nu 1000)
HOME=$(getent passwd $USER | cut -d: -f6)

# SteamOS autologin SDDM config
AUTOLOGIN_CONF='/etc/sddm.conf.d/zz-steamos-autologin.conf'

# Determine which game mode session to return to
# Check if user was in OpenGamepadUI session
CURRENT_SESSION_TYPE="gamescope"
if [[ -f "$HOME/.config/bazzite/last-session-type" ]]; then
  CURRENT_SESSION_TYPE=$(cat "$HOME/.config/bazzite/last-session-type")
fi

# Configure autologin if Steam has been updated
if [[ -f $HOME/.local/share/Steam/ubuntu12_32/steamui.so ]]; then
  {
    echo "[Autologin]"
    if [[ "$CURRENT_SESSION_TYPE" == "opengamepadui" ]]; then
      echo "Session=gamescope-session-opengamepadui.desktop"
    else
      echo "Session=gamescope-session.desktop"
    fi
  } > "$AUTOLOGIN_CONF"
fi

if [[ $BASE_IMAGE_NAME = "kinoite" ]]; then
  sudo -Eu $USER qdbus org.kde.Shutdown /Shutdown org.kde.Shutdown.logout
elif [[ $BASE_IMAGE_NAME = "silverblue" ]]; then
  sudo -Eu $USER gnome-session-quit --logout --no-prompt
fi
